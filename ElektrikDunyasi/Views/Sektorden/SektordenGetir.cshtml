@model ElektrikDunyasi.Models.Entity.Sektorden
@{
    ViewBag.Title = "SektordenGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("SektordenGuncelle", "Sektorden", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="form-group container">
        @Html.TextBoxFor(h => h.SektorId, new { style = "display:none;" })
        <label>Başlık</label>
        @Html.TextBoxFor(h => h.Baslik, new { @class = "form-control", })
        <br />
        
        <label>Keywords</label>
        @Html.TextBoxFor(h => h.Keywords, new { @class = "form-control", })
        <br />
        <label>Tarih</label>
        @Html.TextBoxFor(h => h.Tarih, new { @class = "form-control", @type = "datetime-local" })
        <br />




        <label>İçerik</label>
        @Html.TextAreaFor(h => h.Yazi, new { @class = "form-control", @id = "yazi" })
        <br />


    </div>
    <div class="container">
        <button onclick="return confirm('Güncellemek İstiyor musunuz?')" class=" btn btn-warning">Güncelle</button>
    </div>
}




<script src="~/Scripts/ckeditor/ckeditor.js">

</script>
<script>
    CKEDITOR.replace('yazi');
</script>



