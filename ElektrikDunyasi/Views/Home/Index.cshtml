@model ElektrikDunyasi.Models.ViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}


<!-- 1.BÖLÜM -->
<div class="container p-0">
    <div class="wrapper">
        <!-- Sağ Bölüm -->
        <aside class="aside aside-2">
            <div class="dergi">
                @foreach (var item in Model.eDergi)
                {
                    <a target="_blank" href="/Home/Dergi"><img class="img-fluid" src="@item.EDergiResimUrl" alt=""></a>
                    <a target="_blank" href="/Home/Dergi"><button class="oku w-100">Şimdi Oku</button></a>
                }
            </div>
        </aside>
        <!-- Sol Bölüm -->
        <article class="main">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner" role="listbox">
                    @{ int i = 0;}
                    @foreach (var mainbanner in Model.mainBanner)
                    {
                        i++;
                        var active = i == 1 ? "active" : "";
                        <div class="item @active">

                            <a href="@mainbanner.LinkUrl"> <img src="@Url.Content(mainbanner.ImageUrl)" alt="Los Angeles" style="width:100%;"></a>
                            <div class="carousel-caption  d-md-block">
                                <p>@mainbanner.MainBannerBaslik</p>
                            </div>

                        </div>
                    }

                </div>
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"><i class="fas fa-chevron-left"></i></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"><i class="fas fa-chevron-right"></i></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </article>
    </div>
</div>
<!-- 2.Bölüm -->
<div class="container vertical-slider">
    <div class="row">
        <div class="col-sm-4    col-12 main-tek">
            <div class="panel ">
                <div class="panel-heading">
                    <div class="tek">
                        TEKNOLOJİ
                    </div>
                </div>
                <div class="panel">
                    <div class="row"  >
                        <ul class="demo1 demoss" style="width:100%;">
                            @foreach (var item in Model.teknoloji)
                            {
                                
                                    <li class="news-item" >
                                        
                                        <div style="background-color:white;  border-bottom: 2px solid #018F00; ">
                                            <table cellpadding="4" >
                                                
                                                <tr>
                                                   
                                                    <td><a  href="Teknoji/@item.TeknoId"><img src="@item.ImageUrl" width="60" alt="@item.Keywords" /></a></td>

                                                    <td>
                                                        @{int a; if (item.TeknoBaslik.Length > 30) { a = 30; } else { a = item.TeknoBaslik.Length; }

                                                        }
                                                        <a  href="Teknoji/@item.TeknoId">
                                                            <span class="floating-baslik">

                                                                @item.TeknoBaslik.Substring(0, a)...

                                                            </span>
                                                        </a>
                                                        <a href="Teknoji/@item.TeknoId">
                                                            @{string metin = System.Text.RegularExpressions.Regex.Replace(item.TeknoYazi, @"<(.|\n)*?>", string.Empty);
                                                                int d; if (metin.Length > 100) { d = 100; } else { d = metin.Length; }}
                                                            <p class="vertical-icerik">@Html.Raw(metin.Substring(0, d)) ...</p>
                                                        </a>
                                                    </td>

                                                </tr>


                                            </table>
                                        </div>
                                    </li>
                                

                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-4    col-12 main-rop">
            <div class="panel ">
                <div class="panel-heading">
                    <div class="rop">
                        RÖPORTAJLAR
                    </div>
                </div>
                <div class="panel">
                    <div class="row">
                        <ul class="demo1 demoss" style="width:100%;">
                            @foreach (var item in Model.rportaj)
                            {
                                <li class="news-item">
                                    <div style="background-color:white;  border-bottom: 2px solid purple; ">
                                        <table cellpadding="4">

                                            <tr>

                                                <td><a href="Roportaj/@item.RportajId"><img src="@item.ImageUrl" width="60" alt="@item.Keywords" /></a></td>

                                                <td>
                                                    @{int a; if (item.RportajBaslik.Length > 30) { a = 30; } else { a = item.RportajBaslik.Length; }

                                                    }
                                                    <a href="Roportaj/@item.RportajId"><span class="floating-baslik">

                                                        @item.RportajBaslik.Substring(0, a)...

                                                    </span>
                                                    </a>

                                                    @{string metin = System.Text.RegularExpressions.Regex.Replace(item.RportajYazi, @"<(.|\n)*?>", string.Empty);
                                                        int c; if (metin.Length > 100) { c = 100; } else { c = metin.Length; }}
                                                <a href="Roportaj/@item.RportajId"> <p class="vertical-icerik">@Html.Raw(metin.Substring(0, c)) ...</p></a>
                                                </td>

                                            </tr>

                                        
                                        </table>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-4   col-12 main-mak">
            <div class="panel ">
                <div class="panel-heading">
                    <div class="makale">
                        MAKALELER
                    </div>
                </div>
                <div class="panel">
                    <div class="row">
                        <ul class="demo1 demoss"  style="width:100%;">
                            @foreach (var item in Model.makaleler)
                            {
                                <li class="news-item">
                                    <div style="background-color:white;  border-bottom: 2px solid #203647; ">
                                        <table cellpadding="4">

                                            <tr>

                                                <td><a href="Makale/@item.MakaleId"><img src="@item.ImageUrl" width="60" alt="@item.Keywords" /></a></td>

                                                <td>

                                                    @{int a; if (item.MakaleBaslik.Length > 30) { a = 30; } else { a = item.MakaleBaslik.Length; }

                                                    }
                                                    <a href="Makale/@item.MakaleId"><span class="floating-baslik">

                                                        @item.MakaleBaslik.Substring(0, a)...

                                                    </span></a>

                                                    @{string metin = System.Text.RegularExpressions.Regex.Replace(item.MakaleYazi, @"<(.|\n)*?>", string.Empty);
                                                        int b; if (metin.Length > 100) { b = 100; } else { b = metin.Length; }}
                                                    <a href="Makale/@item.MakaleId"> <p class="vertical-icerik">@Html.Raw(metin.Substring(0, b)) ...</p></a>
                                                </td>

                                            </tr>


                                        </table>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- 3.BÖLÜM -->
<div class="container   orta ">
    <div class="alan-banner mb-5">
        <!-- orta bolum -->
        <article class="bulten-form text-left">
            <h3 class="h3 font-weight-bold">E-Bülten Aboneliği</h3>
            @using(Html.BeginForm("AboneEkle", "Home", FormMethod.Post, new { enctype = "multipart/form-data" })) { 
                <div class="group">

                    <input class="w-100" type="text" placeholder="Ad ve Soyad" name="AboneName" required>
                    <span class="bar w-100"></span>
                </div>
                <div class="group">

                    <input class="w-100" type="email" name="Email" placeholder="E-mail" required>
                    <span class="bar w-100"></span>
                </div>

                <button class="abone float-right">Abone Ol</button>
           }
        </article>
        <!-- Sol Banner -->
        <aside class="aside sol-banner">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner" role="listbox">
                    @{int x = 0;}
                    @foreach (var leftbanner in Model.leftBanner)
                    {
                        x++;
                        var active = x == 1 ? "active" : "";
                        <div class="item @active">

                            <a href="@leftbanner.LinkUrl" target="_blank"> <img src="@Url.Content(leftbanner.ImageUrl)" alt="Los Angeles" style="width:100%;"></a>

                        </div>
                    }
                </div>
            </div>
        </aside>
        <!-- Sağ Banner -->
        <aside class="aside sag-banner">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner" role="listbox">
                    @{int y = 0;}
                    @foreach (var rightbanner in Model.rightBanner)
                    {
                        y++;
                        var active = y == 1 ? "active" : "";
                        <div class="item @active">


                            <a href="@rightbanner.LinkUrl" target="_blank"> <img src="@Url.Content(rightbanner.ImageUrl)" alt="Los Angeles" style="width:100%;"></a>

                        </div>
                    }
                </div>
            </div>
        </aside>
    </div>
</div>

