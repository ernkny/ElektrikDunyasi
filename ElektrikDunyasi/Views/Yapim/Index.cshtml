
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Domine&display=swap" rel="stylesheet">
    <style>
        html {
            min-height: 100%;
        }

        body {
            background: hsla(0, 0%, 87%, 1);
            background: radial-gradient(circle, hsla(0, 0%, 87%, 1) 0%, hsla(202, 45%, 74%, 1) 100%);
            background: -moz-radial-gradient(circle, hsla(0, 0%, 87%, 1) 0%, hsla(202, 45%, 74%, 1) 100%);
            background: -webkit-radial-gradient(circle, hsla(0, 0%, 87%, 1) 0%, hsla(202, 45%, 74%, 1) 100%);
            filter: progid: DXImageTransform.Microsoft.gradient( startColorstr="#DFDFDF", endColorstr="#9EC4DA", GradientType=1 );
            font-family: 'Domine', serif;
        }

        * {
            padding: 0;
            margin: 0;
        }



        .header {
            box-sizing: border-box;
            width: 90%;
            margin: 50px auto;
            background-color: white;
        }

        .header-image, .content {
            display: inline-block;
        }

        .header-image {
            padding: 1%;
            box-sizing: border-box;
        }

            .header-image img {
                width: 274px;
                height: 44px;
            }

        .content {
            margin-left: 10%;
            box-sizing: border-box;
            padding: 1%;
            font-weight: bolder;
            font-family: 'Domine';
            color: black;
        }

        .frame iframe {
            position: relative;
            width: 100%;
            height: 1000px;
        }

        .frame {
            position: relative;
            margin: 50px auto;
            width: 90%;
            height: 1000px;
        }

        .ml3 {
            font-weight: 900;
            font-size: 2em;
            color: #203647;
        }
    </style>
    <title>Elektrik Dünyası</title>
</head>
<body>
    <div class="header">

        <div class="header-image">
            <a href="deneme.html"><img src="img/logo.png" alt=""></a>
        </div>
        <div class="content">
            <h1 class="ml3">Yeni yüzümüzle çok yakında sizlerleyiz...</h1>

        </div>

    </div>
    <div class="frame">
        <iframe src="https://online.fliphtml5.com/esqcd/qybp" frameborder="0"></iframe>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/2.0.2/anime.min.js"></script>
    <script>
        var textWrapper = document.querySelector('.ml3');
    textWrapper.innerHTML = textWrapper.textContent.replace(/\S/g, "<span class='letter'>$&</span>");

    anime.timeline({loop: true})
    .add({
        targets: '.ml3 .letter',
        opacity: [0,1],
        easing: "easeInOutQuad",
        duration: 2250,
        delay: (el, i) => 150 * (i+1)
    }).add({
        targets: '.ml3',
        opacity: 0,
        duration: 1000,
        easing: "easeOutExpo",
        delay: 1000
    });
    </script>
</body>
</html>