@model ElektrikDunyasi.Models.Entity.Makaleler
@{
    ViewBag.Title = "MakaleEkle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<form style="margin-top:15px" class="form-group container "
      method="post" enctype="multipart/form-data">
    <div class="form-group row ">
        <label class="ekle">Makale Başlık</label>
        <input type="text" class="form-control" name="makalebaslik" />

    </div>
    <div class="form-group row ">
        <label class="ekle">Keywords</label>
        <input type="text" class="form-control" name="keywords" />

    </div>
    <div class="form-group row ">
        <label class="ekle">Makale Ekleyen</label>
        <input type="text" class="form-control" name="ekleyen" />

    </div>
    <div class="form-group row ">
        <label class="ekle">Makale Tarih</label>
        <input type="datetime-local" class="form-control" name="tarih" />

    </div>
    <div class="form-group row ">
        <label class="ekle">Makale Resim</label>
        <input style="margin-left:20px" type="file" name="file" />

    </div>
    <hr style="border:1px solid gray" />

    <div class="form-group row ">
        <label class="col-lg-12 ekle" style="padding-bottom:20px;margin-left:-15px;">Makale İçerik</label>
        <textarea type="text" class="form-control" name="makaleyazi" id="makaleyazi"></textarea>


    </div>
    <div style="margin-top:15px;" class="container">
        <button class="btn btn-info" id="makaleeklebtn">Makale Ekle</button>
    </div>



</form>



<script src="~/Scripts/ckeditor/ckeditor.js">

</script>
<script>
    CKEDITOR.replace('makaleyazi');
</script>




