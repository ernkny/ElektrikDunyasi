@model ElektrikDunyasi.Models.Entity.Haberler
@{
    ViewBag.Title = "HaberEkle";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<form style="margin-top:15px" class="form-group container "
      method="post" enctype="multipart/form-data">
    <div class="form-group row ">
        <label class="ekle">Haber Başlık</label>
        <input type="text" class="form-control" name="haberbaslik" />

    </div>
    <div class="form-group row ">
        <label class="ekle">Keywords</label>
        <input type="text" class="form-control" name="keywords" />

    </div>
    <div class="form-group row ">
        <label class="ekle">Haber Ekleyen</label>
        <input type="text" class="form-control" name="haberekleyen" />

    </div>
    <div class="form-group row ">
        <label class="ekle">Haber Tarih</label>
        <input type="datetime-local" class="form-control" name="tarih" />

    </div>
    <div class="form-group row ">
        <label class="ekle">Haber Resim</label>
        <input style="margin-left:20px" type="file" name="file" />

    </div>
    <hr style="border:1px solid gray" />

    <div class="form-group row ">
        <label class="col-lg-12 ekle" style="padding-bottom:20px;margin-left:-15px;">Haber İçerik</label>
        <textarea type="text" class="form-control" name="haberyazi" id="haberyazi"></textarea>


    </div>
    <div style="margin-top:15px;" class="container">
        <button class="btn btn-info" id="Habereklebtn">Haber Ekle</button>
    </div>



</form>



<script src="~/Scripts/ckeditor/ckeditor.js">
    
</script>
<script type="text/javascript">

    CKEDITOR.replace('haberyazi');
</script>




