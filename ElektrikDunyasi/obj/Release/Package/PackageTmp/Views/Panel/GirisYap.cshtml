
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Elektrik Dünyasi Panel</title>
    <!-- meta tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
   
    <!-- custom style sheet -->
    <link href="~/Content/panelcss/panelstyle.css" rel="stylesheet" type="text/css" />
    <!-- /custom style sheet -->
    <!-- fontawesome css -->
    <link href="~/Content/panelcss/fontawesome-all.css" rel="stylesheet" />
    <!-- /fontawesome css -->
    <!-- google fonts-->
    <link href="//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- /google fonts-->

</head>


<body>
    <h1>Panel Giriş Formu</h1>
    <div class=" w3l-login-form">
        <h2>Giriş Yap</h2>
       @using (Html.BeginForm("GirisYap", "Panel", FormMethod.Post)) {

            <div class=" w3l-form-group">
                <label>Kullanıcı Adı</label>
                <div class="group">
                    <i class="fas fa-user"></i>
                    <input type="text" class="form-control" placeholder="Email-Kullanıcı Adı" required="required" name="UserName" />
                </div>
            </div>
            <div class=" w3l-form-group">
                <label>Şifre</label>
                <div class="group">
                    <i class="fas fa-unlock"></i>
                    <input type="password" class="form-control" placeholder="Şifre" required="required" name="UserPassword" />
                </div>
            </div>

            <button type="submit">Giriş Yap</button>
       }

    </div>
    <footer>
        <p class="copyright-agileinfo"> &copy; 2021 FEK Login Form. All Rights Reserved | Design by </p>
    </footer>

</body>

</html>