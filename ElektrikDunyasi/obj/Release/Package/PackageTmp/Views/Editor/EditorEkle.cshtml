@model ElektrikDunyasi.Models.Entity.Editor
@{
    ViewBag.Title = "EditorEkle";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<form style="margin-top:15px" class="form-group container "
      method="post" enctype="multipart/form-data">
    <div class="form-group row ">
        <label class="ekle">Yazı Başlık</label>
        <input type="text" class="form-control" name="Baslik" />

    </div>
    <div class="form-group row ">
        <label class="ekle">Keywords</label>
        <input type="text" class="form-control" name="keywords" />

    </div>
    
    <div class="form-group row ">
        <label class="ekle"> Tarih</label>
        <input type="datetime-local" class="form-control" name="tarih" />

    </div>
   
    <hr style="border:1px solid gray" />

    <div class="form-group row ">
        <label class="col-lg-12 ekle" style="padding-bottom:20px;margin-left:-15px;">Yazı İçerik</label>
        <textarea type="text" class="form-control" name="Icerik" id="Icerik"></textarea>


    </div>
    <div style="margin-top:15px;" class="container">
        <button class="btn btn-info" id="Habereklebtn">Yazı Ekle</button>
    </div>



</form>



<script src="~/Scripts/ckeditor/ckeditor.js">

</script>
<script>
    CKEDITOR.replace('Icerik');
</script>



