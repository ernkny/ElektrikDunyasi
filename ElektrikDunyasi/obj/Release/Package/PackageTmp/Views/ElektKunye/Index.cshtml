    <label>Dağıtım</label>
    @Html.TextBoxFor(e => e.Dagitim, new { @class = "form-control" })
    <br />
    <label>Baskı & Film Çıkışı</label>
    @Html.TextBoxFor(e => e.Baski, new { @class = "form-control" })
    <br />
    <label>Yayına Hazırlayan Kuruluş</label>
    @Html.TextBoxFor(e => e.Yayin, new { @class = "form-control" })
    <br />
    <label>Yayın Türü</label>
    @Html.TextBoxFor(e => e.Type, new { @class = "form-control" })
    <br />
    <label>Yıl</label>
    @Html.TextBoxFor(e => e.Year, new { @class = "form-control" })
    <br />



    <div class="container mt-3">
        <button onclick="return confirm('Güncellemek İstiyor musunuz?')" class=" btn btn-warning">Güncelle</button>
    </div>

</div>




}

