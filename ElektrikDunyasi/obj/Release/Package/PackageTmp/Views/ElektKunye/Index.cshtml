    <br />
    <label>İran Temsilcisi</label>
    @Html.TextBoxFor(e => e.Iran, new { @class = "form-control" })
    <br />
    <label>Mısır Temsilcisi</label>
    @Html.TextBoxFor(e => e.Misir, new { @class = "form-control" })
    <br />
