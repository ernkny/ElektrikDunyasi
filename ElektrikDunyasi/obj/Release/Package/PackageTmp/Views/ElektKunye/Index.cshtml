@model ElektrikDunyasi.Models.Entity.ElektKunye
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("KunyeGuncelle", "ElektKunye", FormMethod.Post))
{

<div class="form-group container " style="margin-top:150px">
