    <label>Sorumlu Yazı işleri Müdürü</label>
    @Html.TextBoxFor(e => e.Sormlu, new { @class = "form-control" })
    <br />
    <label>Yayın Danışmanları</label>
    @Html.TextBoxFor(e => e.YayinDanisman, new { @class = "form-control" })
    <br />
    <label>Yayın Kurulu</label>
    @Html.TextBoxFor(e => e.YayinKrl, new { @class = "form-control" })
    <br />
    <label>Reklam Koordinatörü</label>
    @Html.TextBoxFor(e => e.Reklam, new { @class = "form-control" })
    <br />
    <label>Reklam Ve Halkla İlişkiler Sorumlusu</label>
    @Html.TextBoxFor(e => e.ReklamHalk, new { @class = "form-control" })
    <br />
    <label>Güneydoğu Anadolu Bölge Müdürü</label>
    @Html.TextBoxFor(e => e.Guney, new { @class = "form-control" })
    <br />
    <label>Kurye Dağıtım</label>
    @Html.TextBoxFor(e => e.Kurye, new { @class = "form-control" })
    <br />
    <label>Çeviri</label>
    @Html.TextBoxFor(e => e.Ceviri, new { @class = "form-control" })
    <br />
    <label>Doğu Karadeniz Bölge Temsilcisi</label>
