@using ElektrikDunyasi.Models.Entity;
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<Sektorden>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="container ">

    <h1 style="font-family:bold;font-weight:700; text-align:center">Sektörden</h1>
    <a style="margin-bottom:15px" href="/Sektorden/SektordenEkle/" class="btn btn-primary">Sektörden Yazısı Ekle</a>

    <table class="table table-bordered bg-light">
        <tr>
            <th style="font-size:20px; font-weight:bold;">*</th>
            <th>Başlık</th>
            <th>Keywords</th>
            <th>Resim</th>
            <th>Tarih</th>
            <th>Sil</th>
            <th>Güncelle</th>


        </tr>
        @{int i = 1; }
        @foreach (var item in Model)
        {

            <tr>
                <td style="font-weight:bold;">@i</td>
                <td style="width:35%">@item.Baslik </td>
                <td style="width:25%">@item.Keywords</td>
                
                <td style="width:13%"><img style="width:60px;height:60px" src="@item.ImageUrl" alt="@item.Keywords" /></td>
                <td style="width:10%">@item.Tarih</td>
                <td>@Html.ActionLink("Sil", "SektordenSil", new { id = item.SektorId }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor musunuz?')" })</td>

                <td style="width:5%"><a href="/Sektorden/SektordenGetir/@item.SektorId" class="btn btn-success">Güncelle</a></td>


            </tr>
            i++;
        }


    </table>
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))



</div>

